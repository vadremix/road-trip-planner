FROM php:8.2-cli

ARG UID=1000
ARG GID=1000

RUN apt-get update && apt-get install -y \
    wget \
    git zip unzip libpq-dev \
    && docker-php-ext-install pdo pdo_pgsql

COPY --from=composer:2.6 /usr/bin/composer /usr/bin/composer

# Create non-root user and group with host-matching IDs
RUN groupadd -g ${GID} app \
    && useradd -m -u ${UID} -g ${GID} -s /bin/bash app

# Install Symfony CLI and prepare user home
RUN wget https://get.symfony.com/cli/installer -O - | bash \
    && mv /root/.symfony5/bin/symfony /usr/local/bin/symfony \
    && mkdir -p /home/app/.symfony5 \
    && chown -R ${UID}:${GID} /home/app

WORKDIR /app
COPY . /app

# Ensure project directory is owned by the non-root user (for non-mounted use)
RUN chown -R ${UID}:${GID} /app

USER app

EXPOSE 8000
